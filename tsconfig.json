{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@react-query/*": ["react-query/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@context/*": ["context/*"]
    },
    "jsx": "react-native"
  }
}
